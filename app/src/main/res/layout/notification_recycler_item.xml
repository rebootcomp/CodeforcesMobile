<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/round_nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round_name"
            android:textColor="#6472a5"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_new_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/round_nameTextView"
            android:layout_marginTop="5dp"
            android:text="Появился разбор задач"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_new_tutorial"
            android:layout_marginTop="5dp"
            android:text="date"
            android:textColor="#333333"
            android:textSize="18sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>