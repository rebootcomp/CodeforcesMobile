<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewContest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Contest"
            android:textColor="#6472a5"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewContest"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"
            android:text="Дата:"
            android:textColor="#333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDate"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:text="Date"
            android:textColor="#333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textToStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDate"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:text="До старта:"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewToStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDate"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textToStart"
            android:text="To_Start"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewToStart"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:text="Длительность:"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewToStart"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textDuration"
            android:text="Duration"
            android:textColor="#333333"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonRegist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDuration"
            android:layout_marginTop="5dp"
            android:text="Регистрация"
            android:onClick="onContent"
            android:textSize="20sp"
            android:background="@drawable/edit_text_style"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>