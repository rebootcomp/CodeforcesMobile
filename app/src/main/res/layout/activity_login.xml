<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="383dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/CFlogo"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Card"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="120dp"
            android:background="#eeeeee"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/ic_cf"
            tools:ignore="VectorDrawableCompat" />

        <android.support.v7.widget.CardView
            android:id="@+id/Card"
            android:layout_width="306dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="129dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="211dp"
                android:layout_marginBottom="80dp"
                android:text="Хэндл"
                android:textColor="#333333"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="44dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="44dp"
                android:background="@drawable/edit_text_style" />

            <ImageButton
                android:onClick="onEnter"
                android:id="@+id/Enterbutton"
                android:layout_width="88dp"
                android:layout_height="30dp"
                android:layout_marginLeft="198dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/edit_text_style" />

            <!--  <ImageView
                android:id="@+id/Kitleft"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="65dp"
                app:srcCompat="@android:color/black" />

            <ImageView
                android:id="@+id/KitRigth"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginLeft="287dp"
                android:layout_marginTop="65dp"
                app:srcCompat="@android:color/black" /> -->

            <TextView
                android:id="@+id/Enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="212dp"
                android:layout_marginTop="80dp"
                android:text="Войти"
                android:textColor="#333333"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/Enterwithout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="85dp"
                android:text="Войти без авторизации"
                android:onClick="onEnterWithout"
                android:textColor="#0000cc"
                android:textSize="15sp" />


        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
